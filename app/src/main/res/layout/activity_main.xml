<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorPrimaryDark"
	android:divider="@drawable/divider_blank"
	android:gravity="center"
	android:orientation="vertical"
	android:padding="12dp"
	android:showDividers="middle"
	tools:context=".MainActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="150dp"
		android:divider="@drawable/divider_vertical_blank"
		android:gravity="center"
		android:orientation="horizontal"
		android:showDividers="middle">

		<com.goodayapps.widget.AvatarView
			android:id="@+id/avatarView1"
			android:layout_width="@dimen/avatar_size"
			android:layout_height="@dimen/avatar_size"
			android:src="@drawable/ic_launcher_foreground"
			app:avBackgroundColor="@color/colorPrimary"
			app:avBorderColor="@color/colorAccent"
			app:avBorderWidth="5dp"
			app:avVolumetricDrawable="false"
			app:avVolumetricPlaceholder="false"
			app:iconDrawableScale=".7"
			app:placeholderText="AV" />

		<com.goodayapps.widget.AvatarView
			android:id="@+id/avatarView2"
			android:layout_width="@dimen/avatar_size"
			android:layout_height="@dimen/avatar_size"
			android:src="@drawable/avatar"
			app:avBackgroundColor="@color/colorPrimary"
			app:avBorderColor="@color/colorAccent"
			app:avBorderWidth="5dp"
			app:avVolumetricDrawable="false"
			app:avVolumetricPlaceholder="false" />

		<com.goodayapps.widget.AvatarView
			android:id="@+id/avatarView3"
			android:layout_width="@dimen/avatar_size"
			android:layout_height="@dimen/avatar_size"
			android:fontFamily="@font/font_19849"
			app:avBackgroundColor="@color/colorPrimary"
			app:avBorderColor="@color/colorAccent"
			app:avBorderWidth="5dp"
			app:avVolumetricDrawable="false"
			app:avVolumetricPlaceholder="false"
			app:iconDrawableScale=".7"
			app:placeholderText="AV" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<androidx.appcompat.widget.AppCompatTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1.5"
			android:text="iconDrawableScale"
			android:textColor="@android:color/white"
			tools:ignore="HardcodedText" />

		<SeekBar
			android:id="@+id/iconDrawableScaleSeek"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:max="150"
			android:progress="50" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<androidx.appcompat.widget.AppCompatTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1.5"
			android:text="size"
			android:textColor="@android:color/white"
			tools:ignore="HardcodedText" />

		<SeekBar
			android:id="@+id/sizeSeek"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:max="150"
			android:progress="100" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<androidx.appcompat.widget.AppCompatTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1.5"
			android:text="avBorderWidth"
			android:textColor="@android:color/white"
			tools:ignore="HardcodedText" />

		<SeekBar
			android:id="@+id/avBorderWidth"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:max="15"
			android:progress="5" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<androidx.appcompat.widget.AppCompatTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1.5"
			android:ellipsize="end"
			android:maxLines="1"
			android:text="avTextSizePercentage"
			android:textColor="@android:color/white"
			tools:ignore="HardcodedText" />

		<SeekBar
			android:id="@+id/avTextSizePercentage"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:max="150"
			android:progress="100" />
	</LinearLayout>

	<androidx.appcompat.widget.SwitchCompat
		android:id="@+id/avBackgroundGradientEnabled"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="avVolumetricBG"
		android:textColor="@android:color/white"
		tools:ignore="HardcodedText" />

	<androidx.appcompat.widget.SwitchCompat
		android:id="@+id/avGradientEnabled"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="avVolumetricDrawable"
		android:textColor="@android:color/white"
		tools:ignore="HardcodedText" />
</LinearLayout>